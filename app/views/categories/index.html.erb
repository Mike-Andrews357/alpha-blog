
<div class="card text-center">
  <div class="card-header">
    <h1 align="center">Listing all categories</h1>
  </div>
  <div class="text-center"><%= will_paginate(@things, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class: 'justify-content-center') %></div>
  <% @categories.each do |category| %>
  <h4 class="card-title"><%= link_to "#{category.name}", category_path(category) %></h4>
  <p><small><%= pluralize(category.articles.count, "article") %></small></p>
  <% end %>
</div>
<div class="text-center"><%= will_paginate(@things, :renderer => WillPaginate::ActionView::Bootstrap4LinkRenderer, class: 'justify-content-center') %></div>